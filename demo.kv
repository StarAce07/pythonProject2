<MyGrid>

    firstname: firstname
    lastname: lastname
    email: email

    GridLayout:
        cols:1

        size:root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "First Name: "

            TextInput:
                id: firstname
                multinline:False

            Label:
                text: "Last Name: "

            TextInput:
                id: lastname
                multinline:False

            Label:
                text: "Email"

            TextInput:
                id:email
                multinline:False

        Button:
            text:"Submit"
            on_press: root.btn()